generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
  avatar   String?

  projects Project[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Project {
  id          String  @id @default(cuid())
  name        String
  description String?
  color       String? // hex, например
  icon        String? // optional, для будущего кастомизации

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String @map("owner_id")

  projectStatus ProjectStatus @default(ACTIVE_DEVELOPMENT) @map("project_status")

  links   Link[]
  notes   ProjectRecord[]
  secrets Secret[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Link {
  id          String   @id @default(cuid())
  title       String
  url         String
  type        LinkType // REPO, FIGMA, DEV, PROD, DOCS, OTHER
  description String?

  project   Project @relation(fields: [projectId], references: [id])
  projectId String  @map("project_id")

  tags      Tag[]    @relation("LinksOnTags")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

enum ProjectStatus {
  ACTIVE_DEVELOPMENT // активная разработка
  MAINTENANCE // поддержка
  COMPLETED // завершен
}

enum LinkType {
  REPO
  FIGMA
  DEV
  PROD
  DOCS
  SWAGGER
  OTHER
}

model Tag {
  id    String @id @default(cuid())
  name  String
  links Link[] @relation("LinksOnTags")

  @@unique([name])
}

model ProjectRecord {
  id String @id @default(cuid())

  type  RecordType @default(NOTE)
  title String
  value String
  note  String? // textarea: любые инструкции/таблицы/пояснения (markdown можно)

  links ProjectRecordLink[]

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String  @map("project_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([projectId, type, title])
  @@index([projectId, type])
  @@index([projectId, title])
}

enum RecordType {
  NOTE
  CREDENTIALS
  ENVIRONMENT
  PAYMENT_TEST
  REQUIREMENT
  OTHER
}

model ProjectRecordLink {
  id       String        @id @default(cuid())
  record   ProjectRecord @relation(fields: [recordId], references: [id], onDelete: Cascade)
  recordId String        @map("record_id")

  title String?
  url   String

  @@index([recordId])
  @@index([url])
}

model Secret {
  id          String  @id @default(cuid())
  name        String
  username    String?
  value       String
  description String?

  project   Project @relation(fields: [projectId], references: [id])
  projectId String  @map("project_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}
