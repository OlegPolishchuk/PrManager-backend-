generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
  avatar   String?

  projects Project[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Project {
  id          String  @id @default(cuid())
  name        String
  description String?
  color       String? // hex, например
  icon        String? // optional, для будущего кастомизации

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String @map("owner_id")

  links   Link[]
  notes   Note[]
  secrets Secret[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Link {
  id          String   @id @default(cuid())
  title       String
  url         String
  type        LinkType // REPO, FIGMA, DEV, PROD, DOCS, OTHER
  description String?

  project   Project @relation(fields: [projectId], references: [id])
  projectId String  @map("project_id")

  tags      Tag[]    @relation("LinksOnTags")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

enum LinkType {
  REPO
  FIGMA
  DEV
  PROD
  DOCS
  OTHER
}

model Tag {
  id    String @id @default(cuid())
  name  String
  links Link[] @relation("LinksOnTags")

  @@unique([name])
}

model Note {
  id      String   @id @default(cuid())
  title   String
  content String // markdown или просто текст
  kind    NoteKind @default(GENERAL)

  project   Project @relation(fields: [projectId], references: [id])
  projectId String  @map("project_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

enum NoteKind {
  GENERAL // заметки
  REQUIREMENT // ТЗ/доработки
  CREDENTIAL_HINT // подсказки без секретов
}

model Secret {
  id          String  @id @default(cuid())
  name        String // например "Prod DB", "Admin panel"
  username    String?
  value       String // зашифрованное значение
  description String?

  project   Project @relation(fields: [projectId], references: [id])
  projectId String  @map("project_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}
